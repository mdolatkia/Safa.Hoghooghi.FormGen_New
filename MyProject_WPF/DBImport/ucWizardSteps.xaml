<UserControl x:Class="MyProject_WPF.ucWizardSteps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             FlowDirection="RightToLeft"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="700">
    <Grid Background="#FFAFD3FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" x:Name="pnlSteps" Orientation="Horizontal">
        </StackPanel>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" >
            <Button Width="100" x:Name="btnPrev" Margin="2" Click="btnPrev_Click">قبلی</Button>
            <Button Width="100" x:Name="btnNext" Margin="2" Click="btnNext_Click">بعدی</Button>

        </StackPanel>



    </Grid>
</UserControl>
