<UserControl FlowDirection="RightToLeft" x:Class="MyProject_WPF.frmConditionalPermissionSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MinHeight="300" MinWidth="300"
         xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" >
    <Grid Background="Bisque">
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <telerik:RadGridView ShowGroupPanel="False"  x:Name="dtgItems"  ></telerik:RadGridView>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button    Grid.Row="0" Width="120" HorizontalAlignment="Right" Content="انتخاب" x:Name="btnSelect" Click="btnSelect_Click"></Button>
            <Button    Grid.Row="0" Width="120" HorizontalAlignment="Right" Content="بازگشت" x:Name="btnClose" Click="btnClose_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
