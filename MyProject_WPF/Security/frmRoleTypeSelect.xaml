<UserControl FlowDirection="RightToLeft" x:Class="MyProject_WPF.frmRoleTypeSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
        d:DesignHeight="300"  d:DesignWidth="600"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <telerik:RadGridView ShowGroupPanel="False" x:Name="dtgItems"  ></telerik:RadGridView>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button    Grid.Row="0" Width="120" HorizontalAlignment="Right" Content="انتخاب" x:Name="btnSelect" Click="btnSelect_Click"></Button>
            <Button    Grid.Row="0" Width="120" HorizontalAlignment="Right" Content="بازگشت" x:Name="btnClose" Click="btnClose_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
