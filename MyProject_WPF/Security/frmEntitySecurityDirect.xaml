                            <ComboBox Grid.Row="1" x:Name="cmbColumns" Width="230" Grid.Column="1"></ComboBox>
                            <TextBlock Grid.Row="2" Text="مقدار مورد انتظار"></TextBlock>
                            <telerik:RadGridView x:Name="dtgColumnValue" MinHeight="80" AutoGenerateColumns="False" Grid.Row="2" Grid.Column="1" >
                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn Header="مقدار" DataMemberBinding="{Binding Value}" />
                                    <telerik:GridViewComboBoxColumn x:Name="colReservedValue" Header="مقدار رزرو" DataMemberBinding="{Binding Path=SecurityReservedValue}"></telerik:GridViewComboBoxColumn>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>
                            <TextBlock Grid.Row="3" Text="عملگر"></TextBlock>
                            <ComboBox x:Name="cmbOperator" Width="230" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" ></ComboBox>
                        </Grid>
                    </TabItem>
                </TabControl>-->
                <!--<Border BorderBrush="Black" Grid.Row="1" BorderThickness="1" CornerRadius="5" >
              
            </Border>-->
              
            <!--</Grid>-->
            
            <TextBlock Grid.Row="4"  Text="وضعیت" ></TextBlock>
            <MyCommonWPFControls:MyStaticLookup  Grid.Row="4"  x:Name="lokState" HorizontalAlignment="Stretch"  Grid.Column="1" ></MyCommonWPFControls:MyStaticLookup>
            <!--<telerik:RadGridView x:Name="dtgStates" Margin="0,2,0,2" AutoGenerateColumns="False" Height="300" ShowGroupPanel="False" Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1">
                <telerik:RadGridView.Columns>
                    <MyCommonWPFControls:MyStaticLookupColumn EditItemEnabled="True" NewItemEnabled="True" x:Name="colEntityState" Header="وضعیت" Width="200"  DataMemberBinding="{Binding Path=EntityStateID}"></MyCommonWPFControls:MyStaticLookupColumn>
