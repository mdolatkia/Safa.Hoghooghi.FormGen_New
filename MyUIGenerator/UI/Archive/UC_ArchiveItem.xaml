<UserControl x:Class="MyUIGenerator.View.UC_ArchiveItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
               Height="90" Width="110">
    <Grid x:Name="grdMain" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
        </Grid.RowDefinitions>
        <Image  Height="70" Width="100" x:Name="imgItem" Source="..\..\images\document.png"></Image>
        <TextBlock  HorizontalAlignment="Center" x:Name="lblTitle" Grid.Row="1"></TextBlock>

    </Grid>
</UserControl>
